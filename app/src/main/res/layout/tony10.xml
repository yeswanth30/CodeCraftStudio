<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:padding="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/first"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/arrowImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/menuu"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"/>


        <TextView
            android:id="@+id/fifthTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="01"
            android:textSize="20dp"
            android:layout_marginRight="30dp"
            android:layout_toStartOf="@+id/dotsImageView"
            android:layout_marginTop="2dp"/>



        <ImageView
            android:id="@+id/dotsImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_below="@+id/first"
        android:padding="25dp"
        android:background="#EAEAEA"
android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/imageStart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="396dp"
            android:src="@drawable/cicrletony" />

        <ImageView
            android:id="@+id/imageEnd"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/plusyellow"
            android:layout_alignParentRight="true"

            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/fourth"
        android:padding="20dp"
        android:background="#EAEAEA"

        android:layout_below="@+id/relative"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/headingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stephen Mack"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/fifthTextView122"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@+id/headingTextView"
            android:text="Twitter is a social media platform that enables users to share and discover short messages known as tweets. It was created in 2006 by Jack Dorsey, Biz Stone, and Evan Williams"
            android:layout_marginTop="36dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/fourth"
        android:id="@+id/realtive123"
        android:background="#EAEAEA"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,980"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:padding="6dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,600"
            android:layout_marginLeft="60dp"
            android:textColor="@color/black"

            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView1"
            android:padding="6dp"/>

        <!-- Second Row -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="followers"
            android:layout_marginLeft="40dp"

            android:layout_below="@id/textView1"
            android:layout_alignParentStart="true"
            android:padding="0dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="following"
            android:layout_below="@id/textView2"
            android:layout_marginLeft="55dp"

            android:layout_toEndOf="@+id/textView3"
            android:padding="0dp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="81dp"
            android:layout_height="54dp"
            android:layout_marginStart="148dp"
            android:layout_toEndOf="@+id/textView3"
            android:padding="16dp"
            android:src="@drawable/dotss" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_below="@+id/realtive123"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#FFD700" />

    <RelativeLayout
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="117dp"
        android:layout_below="@+id/line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="105dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="100dp"

            android:layout_marginRight="0dp"
            android:src="@drawable/sofa" />

        <ImageView
            android:id="@+id/imageView1333"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageView1"
            android:src="@drawable/cameraaaaaaa" />

        <ImageView
            android:id="@+id/imageView133344"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageView1333"
            android:src="@drawable/secondsdsa" />

        <ImageView
            android:id="@+id/imageView133"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageView133344"
            android:src="@drawable/cammee" />

    </RelativeLayout>
</RelativeLayout>

     


