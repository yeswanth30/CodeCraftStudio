<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:padding="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/first"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/arrowImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/menuu"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"/>


        <TextView
            android:id="@+id/fifthTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:textAlignment="center"
            android:text="STEPHEN MACK"
            android:layout_marginTop="2dp"/>



        <ImageView
            android:id="@+id/dotsImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/dotss"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>

    <!-- Second RelativeLayout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/second"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/first"
        android:layout_height="wrap_content">

        <!-- Centered ImageView -->
        <ImageView
            android:id="@+id/centeredImageView"
            android:layout_width="306dp"
            android:layout_height="289dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/twopics" />

        <!-- "+" Symbol TextView -->

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ssgsgs22g"
        android:layout_below="@+id/second"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fifthTextView122"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/rightImageView22"
            android:text="Twitter is a social media platform that enables users to share and discover short messages known as tweets. It was created in 2006 by Jack Dorsey, Biz Stone, and Evan Williams"
            android:layout_marginTop="16dp"/>



        <ImageView
            android:id="@+id/rightImageView22"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/informationnns"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_below="@+id/ssgsgs22g"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#B2B7C6" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/fifth"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/line"
        android:layout_height="wrap_content">

        <!-- First Horizontal LinearLayout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/qaqaqaqqz"
            android:orientation="horizontal">

            <!-- First TextView in the first LinearLayout -->
            <TextView
                android:id="@+id/firstTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="24k"/>

            <!-- Second TextView in the first LinearLayout -->
            <TextView
                android:id="@+id/firstTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="789"
                android:textStyle="bold"

                android:textSize="30dp"

                android:layout_marginStart="36dp"/>

            <TextView
                android:id="@+id/firstTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="456"
                android:textStyle="bold"

                android:textSize="30dp"

                android:layout_marginStart="36dp"/>


        </LinearLayout>

        <!-- Second Horizontal LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"

            android:layout_below="@+id/qaqaqaqqz">

            <!-- Third TextView in the second LinearLayout -->

            <!-- Fourth TextView in the second LinearLayout -->
            <TextView
                android:id="@+id/secondTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"

                android:textSize="15dp"
                android:text="following" />

            <TextView
                android:id="@+id/secondTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:layout_marginRight="30dp"
                android:text="followers"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/secondTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"

                android:text="photos"
                />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/horizontalImageView"
        android:layout_width="132dp"
        android:layout_height="102dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/plusyellow" />
</RelativeLayout>
