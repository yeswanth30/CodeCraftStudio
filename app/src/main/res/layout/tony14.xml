<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/first"
        android:padding="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fifthTextView2"
            android:layout_width="457dp"
            android:layout_height="285dp"
            android:layout_marginTop="-40dp"
            android:src="@drawable/road" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/first"
        android:id="@+id/realtive123"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,200"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:textColor="@color/black"
            android:textSize="20dp"

            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:padding="6dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,980"
            android:layout_marginLeft="60dp"
            android:textColor="@color/black"
            android:textStyle="bold"
android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView1"
            android:padding="6dp"/>

        <!-- Second Row -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="followers"
            android:layout_marginLeft="40dp"

            android:layout_below="@id/textView1"
            android:layout_alignParentStart="true"
            android:padding="0dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="following"
            android:layout_below="@id/textView2"
            android:layout_marginLeft="70dp"

            android:layout_toEndOf="@+id/textView3"
            android:padding="0dp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="121dp"
            android:layout_height="74dp"
            android:layout_marginStart="148dp"
            android:layout_toEndOf="@+id/textView3"
            android:padding="16dp"
            android:src="@drawable/plusyellow" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/realtive12311"
        android:padding="15dp"
        android:layout_below="@+id/realtive123"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fifthTextView221"
            android:layout_width="397dp"
            android:layout_height="76dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/cycling" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/firstss"
        android:layout_below="@+id/realtive12311"
        android:padding="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fifthTextView2dd"
            android:layout_width="wrap_content"
            android:layout_height="291dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/kms" />
    </RelativeLayout>
</RelativeLayout>