<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/arrowImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"/>

    </RelativeLayout>

    <!-- Single RelativeLayout for both firstImage and secondImage -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kijuikjuikj"
        android:layout_below="@id/first"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/firstImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/cicrletony"/>
        <TextView
            android:id="@+id/fifthTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"
            android:text="Stephen Mack"
            android:layout_below="@+id/firstImage"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/fifthTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"

            android:text="Sanfrancisco, CA "
            android:layout_below="@+id/fifthTextView1"
            android:layout_marginTop="2dp"/>

        <ImageView
            android:id="@+id/secondImage"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="-30dp"
            android:layout_marginTop="-16dp"
            android:layout_toEndOf="@id/firstImage"
            android:src="@drawable/blueone" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/six"
        android:layout_below="@+id/kijuikjuikj"
        android:layout_marginLeft="-75dp"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fifthTextView23"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:rotation="90"
            android:text="Sanfrancisco, CA "
            android:layout_marginTop="2dp"/>
        <ImageView
            android:id="@+id/fifthTextView2333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:src="@drawable/baseline_add_24"
            android:text="+"
            android:layout_marginTop="232dp"/>



        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="200dp"
            android:layout_height="270dp"
            android:layout_toEndOf="@+id/fifthTextView23"
            android:src="@drawable/shirttt"
            android:layout_marginRight="8dp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="270dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageView1"
            android:src="@drawable/cutshirt" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ssgsgs22g"
        android:layout_below="@+id/six"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fifthTextView122"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/rightImageView22"
            android:text="Twitter is a social media platform that enables users to share and discover short messages known as tweets. It was created in 2006 by Jack Dorsey, Biz Stone, and Evan Williams"
            android:layout_marginTop="16dp"/>



        <ImageView
            android:id="@+id/rightImageView22"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/informationnns"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"/>
    </RelativeLayout>


</RelativeLayout>
