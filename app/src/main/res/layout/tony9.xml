<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:padding="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/first"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/arrowImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"/>


        <TextView
            android:id="@+id/fifthTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:textAlignment="center"
            android:text="STEPHEN MACK"
            android:layout_marginTop="2dp"/>



        <ImageView
            android:id="@+id/dotsImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/dotss"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first"
        android:layout_marginTop="25dp"
        android:id="@+id/okikoikoik"
        android:padding="6dp">

        <ImageView
            android:id="@+id/yourImageView"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/tonyyy" />

        <TextView
            android:id="@+id/firstTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2980"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"

            android:layout_toEndOf="@id/yourImageView"
            android:layout_marginStart="36dp"/>

        <!-- Second TextView (below the first) -->
        <TextView
            android:id="@+id/secondTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="followers"
            android:layout_below="@id/firstTextView"
            android:layout_toEndOf="@id/yourImageView"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"/>

        <!-- Third TextView (to the right of the second) -->
        <TextView
            android:id="@+id/thirdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1600"
            android:textSize="20dp"
android:textStyle="bold"
            android:layout_toEndOf="@id/firstTextView"
            android:layout_alignTop="@id/firstTextView"
            android:layout_marginStart="26dp"/>

        <!-- Fourth TextView (below the third) -->
        <TextView
            android:id="@+id/fourthTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="following"
            android:layout_marginStart="16dp"
            android:layout_below="@id/thirdTextView"
            android:layout_toEndOf="@id/secondTextView"
            android:layout_marginTop="8dp"/>
        <ImageView
            android:id="@+id/secondImageView"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/follow"
            android:layout_marginLeft="250dp"
            android:layout_below="@id/secondTextView"
            android:layout_marginTop="38dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/second"
        android:layout_below="@+id/okikoikoik"
        android:layout_height="wrap_content">

        <!-- Centered ImageView -->
        <ImageView
            android:id="@+id/centeredImageView"
            android:layout_width="346dp"
            android:layout_height="249dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/boys" />

        <!-- "+" Symbol TextView -->

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ssgsgs22g"
        android:layout_below="@+id/second"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:background="@drawable/yellow_rectangle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/fifthTextView122"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/rightImageView22"
            android:text="Twitter is a social media platform that enables users to share and discover short messages known as tweets. It was created in 2006 by Jack Dorsey, Biz Stone, and Evan Williams"
            android:layout_marginTop="16dp"/>



        <ImageView
            android:id="@+id/rightImageView22"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/informationnns"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"/>
    </RelativeLayout>

</RelativeLayout>