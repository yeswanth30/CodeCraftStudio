<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content">

        <!-- Tony Image with Elevation -->
        <ImageView
            android:id="@+id/centeredImageView231"
            android:layout_width="206dp"
            android:layout_height="269dp"
            android:layout_marginTop="-30dp"
            android:src="@drawable/tonyyy"
            android:elevation="2dp" />

        <!-- Arrow Image -->
        <ImageView
            android:id="@+id/arrowImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:elevation="3dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secondRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/centeredImageView"
        android:layout_marginTop="286dp"
        android:layout_marginLeft="40dp"
        android:elevation="4dp"
        tools:ignore="NotSibling">

        <!-- Horizontal LinearLayout for the first two TextViews -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linears"
            android:layout_alignParentTop="true">

            <!-- First TextView -->
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stephen Mack"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <!-- New TextView beside the first TextView -->
            <TextView
                android:id="@+id/horizontalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="30dp"
                android:layout_marginStart="88dp"/>
        </LinearLayout>

        <!-- Remaining TextViews -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2980"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="48dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ssgsgsg"
        android:textAlignment="center"
        android:layout_below="@+id/secondRelative"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fifthTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/rightImageView"
            android:text="Tony MENZ"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/fifthTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1h"
            android:layout_below="@+id/fifthTextView1"
            android:layout_toEndOf="@+id/rightImageView"

            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/fifthTextView3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="
Twitter is a social media platform that enables users to share and discover short messages known as tweets. It was created in 2006 by Jack Dorsey, Biz Stone, and Evan Williams."
            android:layout_below="@+id/fifthTextView2"
            android:layout_toEndOf="@+id/rightImageView"

            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/rightImageView"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/tonyyy" />
    </RelativeLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ssgsgsg"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fifth"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="160dp"
                android:src="@drawable/camerablack"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="160dp"
                android:src="@drawable/whiteee"
                android:layout_marginRight="8dp"/>




        </LinearLayout>
    </HorizontalScrollView>




</RelativeLayout>
