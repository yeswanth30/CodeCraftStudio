<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:padding="16dp">

    <!-- First RelativeLayout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/first"
        android:layout_height="wrap_content">

        <!-- Arrow ImageView -->
        <ImageView
            android:id="@+id/arrowImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"/>

        <!-- Dots ImageView -->
        <ImageView
            android:id="@+id/dotsImageView"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/baseline_add_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ssgsgsg"
        android:layout_below="@+id/first"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content">

        <!-- Rounded ImageView at the left end -->
        <ImageView
            android:id="@+id/rightImageView"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:src="@drawable/cicrletony"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/fifthTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"
            android:text="Stephen Mack"
            android:layout_toEndOf="@+id/rightImageView"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/fifthTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"

            android:text="Sanfrancisco, CA "
            android:layout_below="@+id/fifthTextView1"
            android:layout_toEndOf="@+id/rightImageView"
            android:layout_marginTop="2dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/six"
        android:layout_below="@+id/ssgsgsg"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="200dp"
            android:layout_height="270dp"
            android:src="@drawable/first11"
            android:layout_marginRight="8dp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:src="@drawable/second122"
            android:layout_toRightOf="@+id/imageView1"
            android:layout_marginRight="8dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ssgsgs22g"
android:layout_below="@+id/six"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fifthTextView122"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/rightImageView22"
            android:text="Twitter is a social media platform that enables users to share and discover short messages known as tweets. It was created in 2006 by Jack Dorsey, Biz Stone, and Evan Williams"
            android:layout_marginTop="16dp"/>



        <ImageView
            android:id="@+id/rightImageView22"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/informationnns"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"/>
    </RelativeLayout>

</RelativeLayout>
