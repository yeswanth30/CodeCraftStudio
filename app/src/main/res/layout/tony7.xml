<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:padding="16dp">

    <!-- First RelativeLayout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/first"
        android:layout_height="wrap_content">

        <!-- Arrow ImageView -->
        <ImageView
            android:id="@+id/arrowImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"/>

        <!-- Dots ImageView -->
        <ImageView
            android:id="@+id/dotsImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/dotss"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_below="@+id/first"
        android:id="@+id/eeeeeeeeeeee"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/firstImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/cicrletony"
            android:layout_marginTop="20dp"/>

        <!-- First TextView -->
        <TextView
            android:id="@+id/firstTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stephen Smith"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_below="@id/firstImageView"
            android:layout_marginTop="8dp"/>

        <!-- Second TextView -->
        <TextView
            android:id="@+id/secondTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sanfrancisco, CA "
            android:layout_below="@id/firstTextView"
            android:layout_marginTop="8dp"/>

        <!-- Second ImageView -->
        <ImageView
            android:id="@+id/secondImageView"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/follow"
            android:layout_marginLeft="150dp"
            android:layout_below="@id/secondTextView"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/six"
        android:layout_below="@+id/eeeeeeeeeeee"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="100dp"

            android:layout_marginRight="0dp"
            android:src="@drawable/sofa" />
        <ImageView
            android:id="@+id/imageView1333"
            android:layout_width="100dp"
            android:layout_height="100dp"
android:layout_toEndOf="@+id/imageView1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/cameraaaaaaa" />
        <ImageView
            android:id="@+id/imageView133344"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@+id/imageView1333"
            android:layout_marginLeft="10dp"
            android:src="@drawable/secondsdsa" />
        <ImageView
            android:id="@+id/imageView133"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@+id/imageView133344"
            android:layout_marginLeft="10dp"
            android:src="@drawable/cammee" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ssgsgs22g"
        android:layout_below="@+id/six"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fifthTextView122"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/rightImageView22"
            android:text="Twitter is a social media platform that enables users to share and discover short messages known as tweets. It was created in 2006 by Jack Dorsey, Biz Stone, and Evan Williams"
            android:layout_marginTop="16dp"/>



        <ImageView
            android:id="@+id/rightImageView22"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/informationnns"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/jafknaskjfn"
        android:layout_width="253dp"
        android:layout_height="139dp"
        android:layout_below="@+id/ssgsgs22g"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="13dp">

        <!-- First TextView -->
        <TextView
            android:id="@+id/firstTextView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="1,600"
            android:textSize="30dp"
            android:textStyle="bold" />

        <!-- Second TextView -->
        <TextView
            android:id="@+id/secondTextView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstTextView12"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="following"
            android:textSize="20dp" />

        <!-- ImageView placed horizontally with the two TextViews -->
        <ImageView
            android:id="@+id/horizontalImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/firstTextView12"
            android:src="@drawable/greyy" />
    </RelativeLayout>


</RelativeLayout>